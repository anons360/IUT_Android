<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_finish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#0099cc"
    tools:context="com.iut.german_marabel.icongame.FinishActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/displayNewRecord"
        android:text="Nouveau Record !"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_red_light" />

    <TextView
        android:text="Affichage du score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/displayNewRecord"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:id="@+id/Score"
        android:textStyle="normal|bold|italic"
        android:textSize="36sp"
        android:textAlignment="center"
        android:textColor="@color/black_overlay" />

    <TextView
        android:text="Le saviez-vous ? \n\nLe paradoxe du chat de Schrödinger postule une situation dans laquelle un chat prisonnier à l'intérieur d'une boîte est à la fois mort et vivant. Schrödinger s'est servi de ce paradoxe pour pouvoir tuer des chats impunément."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/uselessMessage"
        android:fontFamily="monospace"
        android:textSize="14sp"
        android:lineSpacingExtra="8sp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Retourner au menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/backHome"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Rejouer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/playAgain"
        android:layout_above="@+id/backHome"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="7dp" />

</RelativeLayout>
